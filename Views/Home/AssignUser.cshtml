@model UserAssignmentViewModel
@{
	ViewData["Title"] = "Assign User";
}

<div class="card mt-4 p-3">
	<h2>User - Application Assignment</h2>
	<div>
		<form class="card-body p-3" style="" method="post">
			<input asp-for="UserId" hidden />
			<input asp-for="username" hidden />
			<div class="row">
				@for (int i = 0; i < Model.userAssigned.Count; i++)
				{
					<div>
						<input type="hidden" asp-for="@Model.userAssigned[i].ApplicationId" />
						<input type="hidden" asp-for="@Model.userAssigned[i].Name" />
						<div>
							<input type="checkbox" asp-for="@Model.userAssigned[i].IsAssigned" />
							<label class="form-check-label" asp-for="@Model.userAssigned[i].IsAssigned">@Model.userAssigned[i].Name</label>
						</div>
					</div>

				}
			</div>

			<div class="mt-3">
				<button type="submit" class="btn btn-success"> Save Changes</button>
				<a type="button" asp-action="Index" asp-controller="Home" class="btn btn-danger btn-block "> Back</a>
			</div>
			

		</form>

	</div>
</div>
